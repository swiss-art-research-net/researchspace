{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "properties": {
        "draggable": {
            "default": true,
            "description": "Render the item draggable",
            "type": "boolean"
        },
        "focused": {
            "description": "IRI of the element that should be focused by default.",
            "type": "string"
        },
        "id": {
            "description": "ID for issuing component events.",
            "type": "string"
        },
        "infoTemplate": {
            "description": "Template for node additional info.",
            "type": "string"
        },
        "inputPlaceholder": {
            "description": "Placeholder string used in the input search",
            "type": "string"
        },
        "pageSize": {
            "default": 50,
            "description": "How many items should be loaded for every scroll page.",
            "type": "number"
        }
    },
    "propertyOrder": [
        "id",
        "pageSize",
        "infoTemplate",
        "focused",
        "inputPlaceholder",
        "draggable"
    ],
    "type": "object"
}

